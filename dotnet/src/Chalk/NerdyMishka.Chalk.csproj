<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>NerdyMishka.Chalk</PackageId>
    <Description>
      🖍️Color console/terminal library based on chalk.js. The library uses ansi codes 
      to style strings for the command line. Windows 10 supports true 24 bit color for 
      the command line.  
    </Description>
    <TargetFrameworks>netstandard2.0;net45;net461</TargetFrameworks>
    <VersionPrefix>0.1.0</VersionPrefix>
    <PackageLicenseUrl>https://gitlab.com/nerdymishka/gainz/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://gitlab.com/nerdymishka/gainz/tree/master/dotnet/src/Chalk</PackageProjectUrl>
    <PackageIconUrl>https://gitlab.com/nerdymishka/gainz/raw/master/resources/logo.png</PackageIconUrl>
    <PackageTags>NerdyMishka NerdyMishka.Chalk Chalk Color Console Terminal</PackageTags>
    <Company>NerdyMishka</Company>
    <Product>NerdyMishka.Chalk</Product>
    <RootNamespace>NerdyMishka</RootNamespace>
    <RuntimeIdentifiers>win-x64;win-x86;osx-x64;linux-x64;android</RuntimeIdentifiers>
  </PropertyGroup>

 <ItemGroup>
    <PackageReference Include="System.Memory" Version="4.5.1" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="ChalkConsole.Windows.cs" />
    <Compile Remove="ChalkConsole.Unix.cs" />
  </ItemGroup>

  <ItemGroup Condition="$(OS) == 'Windows_NT'">
    <Compile Include="ChalkConsole.Windows.cs" />
  </ItemGroup>

  <ItemGroup Condition="$(OS) != 'Windows_NT'">
    <Compile Include="ChalkConsole.Unix.cs" />
  </ItemGroup>

</Project>
